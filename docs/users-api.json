{
    "openapi": "3.0.2",
    "info": {
        "title": "API Users",
        "version": "1.0"
    },
    "servers": [{ "url": "https://localhost:8000" }],
    "paths": {
        "/api/users": {
            "post": {
                "description": "Register new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "example": {
                                "description": "Register user catura",
                                "value": {
                                    "username": "catura",
                                    "firstname": "catura",
                                    "password": "blabla",
                                    "email": "catura@gmail.com"
                                }
                            },
                            "schema": {
                                "type": "object",
                                "required": [
                                    "username",
                                    "firstname",
                                    "password",
                                    "email"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "firstname": {
                                        "type": "string"
                                    },
                                    "lastname": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success register user",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "description": "Success register user",
                                        "value": {
                                            "data": {
                                                "id": 1,
                                                "username": "catura",
                                                "firstname": "catura",
                                                "email": "catura@gmail.com"
                                            }
                                        }
                                    }
                                },
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "username": {
                                                    "type": "string"
                                                },
                                                "firstname": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "validationerror": {
                                        "description": "Validation error",
                                        "value": {
                                            "error": {
                                                "username": [
                                                    "username must not be blank",
                                                    "username min 6 characters"
                                                ],
                                                "email": [
                                                    "email already exist",
                                                    "email invalid"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/login": {
            "post": {
                "description": "Login user"
            }
        },
        "/api/users/current": {
            "get": {
                "description": "Get current user"
            },
            "patch": {
                "description": "Update current user"
            }
        },
        "/api/users/logout": {
            "delete": {
                "description": "Logout user"
            }
        }
    }
}
